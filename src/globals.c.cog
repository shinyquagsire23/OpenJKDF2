        if c_val == "{0}":
            cog.outl("_memset(&%s, 0, sizeof(%s));" % (name, name))
        else:
            cog.outl("%s __%s_origValue%s = %s;" % (c_type, name, c_type_post, c_val))
            cog.outl("_memcpy(&%s, &__%s_origValue, sizeof(%s));" % (name, name, name))

]]]
